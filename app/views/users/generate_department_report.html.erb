<h1>Search Department Fitbit data</h1>

<p>
<%= link_to 'Back to Dashboard', hr_dashboard_user_path(current_user), class: "btn btn-danger" %>
</p>

<h3>Search Criteria:</h3>
<%= form_tag(generate_department_report_user_path method: :get) do %>
    <p>
        <label>Department</label>
        <br>
        <%= select_tag "search_range[department_id]", options_from_collection_for_select(@department_list, "id", "name",@display_department_id)%>
    </p>

    <p>
        <label>Start Date</label>
        <br>
        <%= date_field :search_range, :start_date, :value => @display_start_date %>
    </p>

    <p>
        <label>End Date</label>
        <br>
        <%= date_field :search_range, :end_date, :value => @display_end_date %>
    </p>
     
    <p>
    <%= submit_tag 'Search', class: "btn btn-primary" %>
    </p>
<% end %>

<%= render 'list_search_data' %>