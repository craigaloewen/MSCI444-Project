<h1><%= @department.name %> Department</h1>

<p>
<%= link_to 'Back to Departments', departments_path, class: "btn btn-danger" %>
</p>


<h3>Users in this department</h3>
<table class="table">
    <thead>
        <tr>
        <th scope="col">Username</th>
        <th scope="col">View Profile</th>
        <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        <% if !@users.nil? %>
            <% @users.each do |user| %>
                <tr>
                    <th scope="row">
                        <%= user.name %>
                    </th> 
                    <td>
                        <%= link_to 'View', user_path(user) %>
                    </td> 
                    <td>
                        <%= link_to 'Delete', user_path(user),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>